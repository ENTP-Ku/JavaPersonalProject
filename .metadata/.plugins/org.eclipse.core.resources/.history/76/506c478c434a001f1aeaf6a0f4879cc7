package com.study2;

import java.time.OffsetDateTime; // OffsetDateTime 클래스 임포트

import com.fasterxml.jackson.annotation.JsonFormat; // JSON 형식 지정 어노테이션 임포트

import lombok.Getter; // Lombok 라이브러리의 Getter 어노테이션 임포트

@Getter // Lombok을 사용하여 자동으로 getter 메서드를 생성
public class Now {
	
    // JSON으로 변환할 때 날짜 및 시간 형식을 지정하는 어노테이션
	@JsonFormat(pattern = "yyyy-MM-dd'T'HH:mm:ssZ")
	private OffsetDateTime time; // 현재 시간 정보를 저장할 OffsetDateTime 객체
	
    // 기본 생성자, 객체가 생성될 때 현재 시간을 설정
	public Now() {
		time = OffsetDateTime.now(); // 현재 시간을 설정
	}
	
    // 주석 처리된 getTime() 메서드, Lombok의 @Getter로 인해 자동으로 생성되므로 필요 없음
//	public OffsetDateTime getTime() {
//		return time;
//	}
}
