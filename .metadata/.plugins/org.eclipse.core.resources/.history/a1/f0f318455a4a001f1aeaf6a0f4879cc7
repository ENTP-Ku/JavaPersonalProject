import javafx.application.Application;
import javafx.scene.Group;
import javafx.scene.PerspectiveCamera;
import javafx.scene.Scene;
import javafx.scene.paint.Color;
import javafx.scene.shape.Cube;
import javafx.scene.paint.PhongMaterial;
import javafx.stage.Stage;

public class Simple3DExample extends Application {

    @Override
    public void start(Stage primaryStage) {
        // 3D 큐브를 생성합니다.
        Cube cube = new Cube(100); // 큐브의 크기를 100으로 설정
        cube.setTranslateX(200);
        cube.setTranslateY(200);
        cube.setTranslateZ(500);
        cube.setMaterial(new PhongMaterial(Color.BLUE)); // 큐브의 색상을 파란색으로 설정

        // 카메라를 설정합니다.
        PerspectiveCamera camera = new PerspectiveCamera(true);
        camera.setTranslateZ(-1000); // 카메라를 뒤로 이동시킵니다.

        // 3D 장면을 설정합니다.
        Group root = new Group(cube);
        Scene scene = new Scene(root, 600, 400, true);
        scene.setFill(Color.LIGHTGRAY); // 배경 색상을 연한 회색으로 설정
        scene.setCamera(camera);

        // 스테이지를 설정합니다.
        primaryStage.setTitle("Simple 3D Example");
        primaryStage.setScene(scene);
        primaryStage.show();
    }

    public static void main(String[] args) {
        launch(args);
    }
}
